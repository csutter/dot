[alias]
  prn = remote prune origin
[merge]
  ff = only
  conflictstyle = diff3
[color]
  ui = true
[push]
  default = upstream
[pull]
  rebase = true
[rebase]
  autostash = true
[core]
  excludesfile = ~/.gitignore_global
  autocrlf = input
[diff]
  tool = icdiff
[difftool]
  prompt = false
[difftool "icdiff"]
  cmd = /usr/local/bin/icdiff --line-numbers $LOCAL $REMOTE
[init]
  defaultBranch = main
